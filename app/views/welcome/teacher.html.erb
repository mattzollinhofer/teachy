<div class='row welcome teacher'>
  <% if @welcome.class_periods? %>
    <div class='col-xs-12 col-md-8'>
      <div class='panel panel-primary list-panel'>
        <div class='panel-heading'>
          <div class='panel-title'>
            <div class='h1'>Class Periods You're Teaching</div>
          </div>
        </div>
        <div class='panel-body'>
          <div class='class-periods list-group'>
            <% @welcome.class_periods.each do |class_period| %>
              <%= link_to(class_period_short_label(class_period),
                          gradebook_path(class_period, unit_id: @welcome.current_unit(class_period: class_period)),
                          class:'class-period list-group-item clearfix') %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class='col-xs-12 col-md-4'>
      <div class='panel panel-default list-panel'>
        <div class='panel-heading'>
          <div class='panel-title'>
            <h2>Manage Units</h2>
          </div>
        </div>
        <div class='panel-body'>
          <div class='units list-group'>
            <% @welcome.manageable_units.each do |unit| %>
              <%= link_to(unit.name, unit_path(unit), class:'unit list-group-item') %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% else %>

    <%= render partial: 'shared/jumbo',
                        locals: {
                        jumbo_text: 'Not teaching any classes?!',
                        button_text: 'Teach Something',
                        url: class_periods_url } %>
  <% end %>
</div>
