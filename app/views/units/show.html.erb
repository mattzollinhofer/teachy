<p><%= link_to "Back to #{@unit.course.name}", course_path(@unit.course) %></p>
<h2><%= @unit %></h2>
<h3>Assignments</h3>
<ul class='assignments'>
  <% if @unit.assignments.present? %>
    <% @unit.assignments.each do |assignment| %>
      <li data-assignment-id=<%=assignment.id%> class='assignment'>
        <%=assignment.name%> - Points: <%=assignment.points_possible%> - Stars: <%=assignment.stars_possible%>
        <%= link_to 'edit', edit_assignment_path(assignment) %>
        <%= link_to 'delete', assignment_path(assignment), method: :delete,
          data: { confirm: "Are you sure you want to delete assignment: #{assignment.name}" } %>
      </li>
    <% end %>
  <% else %>
    <li class='empty assignment'>This unit has no assignments</li>
  <% end %>
</ul>
<p><%= link_to 'Create a New Assignment', new_unit_assignment_path(@unit) %></p>
